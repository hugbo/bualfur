<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rentInput">
            <EditText
                android:id="@+id/rentMin"
                android:layout_width="148dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.74"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Leiguverð min"
                />

            <EditText
                android:id="@+id/rentMax"
                android:layout_width="212dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Leiguverð max"
                android:layout_toRightOf="@id/rentMin"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rentInput"
            >

            <Spinner
                android:id="@+id/zipCodes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rentMin" />

        </LinearLayout>


    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/property_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="292dp"
        android:layout_gravity="bottom" />

</FrameLayout>

